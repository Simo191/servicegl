<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MultiServices.Deliverer.ViewModels"
             x:Class="MultiServices.Deliverer.Views.DeliveryHistoryPage"
             x:DataType="vm:DeliveryHistoryViewModel"
             Title="Historique"
             BackgroundColor="{StaticResource Background}">
    <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
        <VerticalStackLayout Padding="16" Spacing="12">
            <!-- Summary -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Frame Style="{StaticResource StatCard}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding TotalDeliveries}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="Livraisons" FontSize="12" TextColor="{StaticResource TextSecondary}" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Column="1" Style="{StaticResource StatCard}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding TotalEarnings, StringFormat='{0:F0} MAD'}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="Total gagnÃ©" FontSize="12" TextColor="{StaticResource TextSecondary}" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Filters -->
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Toutes" Style="{StaticResource SecondaryButton}" HeightRequest="36" FontSize="13"
                            Command="{Binding FilterCommand}" CommandParameter="all" />
                    <Button Text="TerminÃ©es" Style="{StaticResource SecondaryButton}" HeightRequest="36" FontSize="13"
                            Command="{Binding FilterCommand}" CommandParameter="delivered" />
                    <Button Text="AnnulÃ©es" Style="{StaticResource SecondaryButton}" HeightRequest="36" FontSize="13"
                            Command="{Binding FilterCommand}" CommandParameter="cancelled" />
                </HorizontalStackLayout>
            </ScrollView>

            <!-- List -->
            <CollectionView ItemsSource="{Binding Deliveries}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="24" HorizontalOptions="Center">
                        <Label Text="ðŸ“­" FontSize="48" HorizontalOptions="Center" />
                        <Label Text="Aucune livraison dans l'historique" FontSize="15"
                               TextColor="{StaticResource TextSecondary}" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:Object">
                        <Frame Style="{StaticResource CardFrame}" Margin="0,4">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Label Text="{Binding OrderTypeIcon}" FontSize="28" VerticalOptions="Center" />
                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="{Binding PickupName}" FontAttributes="Bold" FontSize="15" />
                                    <Label Text="{Binding DeliveryAddress}" FontSize="12" TextColor="{StaticResource TextSecondary}" LineBreakMode="TailTruncation" />
                                    <Label Text="{Binding DateDisplay}" FontSize="11" TextColor="{StaticResource TextSecondary}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End">
                                    <Label Text="{Binding TotalEarning, StringFormat='{0:F2} MAD'}" FontAttributes="Bold"
                                           FontSize="15" TextColor="{StaticResource Primary}" />
                                    <Label Text="{Binding Rating, StringFormat='â­ {0:F1}'}" FontSize="12" HorizontalOptions="End" />
                                </VerticalStackLayout>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DeliveryHistoryViewModel}}, Path=ViewDetailCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </RefreshView>
</ContentPage>