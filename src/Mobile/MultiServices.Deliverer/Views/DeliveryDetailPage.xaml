<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MultiServices.Deliverer.ViewModels"
             x:Class="MultiServices.Deliverer.Views.DeliveryDetailPage"
             x:DataType="vm:DeliveryDetailViewModel"
             Title="DÃ©tail livraison"
             BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Delivery.PickupName}" FontSize="20" FontAttributes="Bold" />
                    <Label Text="{Binding Delivery.DeliveryAddress}" FontSize="14" TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding Delivery.DateDisplay}" FontSize="13" TextColor="{StaticResource TextSecondary}" />
                    <BoxView HeightRequest="1" Color="#E0E0E0" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Label Text="Base" FontSize="13" TextColor="{StaticResource TextSecondary}" />
                        <Label Grid.Column="1" Text="{Binding Delivery.Earning, StringFormat='{0:F2} MAD'}" FontSize="13" HorizontalOptions="End" />
                        <Label Grid.Row="1" Text="Pourboire" FontSize="13" TextColor="{StaticResource TextSecondary}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Delivery.Tip, StringFormat='{0:F2} MAD'}" FontSize="13" HorizontalOptions="End" />
                    </Grid>
                    <BoxView HeightRequest="1" Color="#E0E0E0" />
                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Total" FontAttributes="Bold" FontSize="16" />
                        <Label Grid.Column="1" Text="{Binding Delivery.TotalEarning, StringFormat='{0:F2} MAD'}"
                               FontAttributes="Bold" FontSize="16" TextColor="{StaticResource Primary}" HorizontalOptions="End" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            <Frame Style="{StaticResource CardFrame}">
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="ðŸ“" FontSize="20" HorizontalOptions="Center" />
                        <Label Text="{Binding Delivery.DistanceKm, StringFormat='{0:F1} km'}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="â±" FontSize="20" HorizontalOptions="Center" />
                        <Label Text="{Binding Delivery.DurationMinutes, StringFormat='{0} min'}" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>