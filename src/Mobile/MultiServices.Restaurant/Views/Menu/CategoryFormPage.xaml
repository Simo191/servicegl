<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiServices.Restaurant.Views.Menu.CategoryFormPage" Title="Catégorie">
    <VerticalStackLayout Spacing="16" Padding="24" VerticalOptions="Center">
        <Entry x:Name="NameEntry" Placeholder="Nom de la catégorie *" />
        <Entry x:Name="DescEntry" Placeholder="Description (optionnel)" />
        <Entry x:Name="SortEntry" Placeholder="Ordre d'affichage (1, 2, 3...)" Keyboard="Numeric" />
        <Button Text="Enregistrer" Clicked="OnSave" Style="{StaticResource PrimaryBtn}" />
    </VerticalStackLayout>
</ContentPage>